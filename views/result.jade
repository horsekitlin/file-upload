extends layout

block file-info
	form#wjson(method='post', action='/wjson', name="wjson")
		.leftfloat.margin-right 資料夾名稱：#{date}
			input(name="folder",type="hidden", value="#{date}")
		div 書名：
			input(placeholder="#{date}", name="bookname", value="#{chapter_title}")
		table(class="table table-bordered")
			tr
				th 檔案名稱
				th 標題
			for file in file_info
				tr
					td 
						h4.text-info 
							strong #{file.filename}
					td 
						input(placeholder=#{file.filename}, name="alias", value="#{file.filename}")
		button.btn.btn-primary
			儲存

